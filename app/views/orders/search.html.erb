  <dl>
    <dt><%= Order.human_attribute_name(:order_number) %>:</dt>
    <dd><%= @order.order_number %></dd>

    <dt><%= Order.human_attribute_name(:carrier_id) %>:</dt>
    <dd><%= @order.carrier.brand_name %></dd>

