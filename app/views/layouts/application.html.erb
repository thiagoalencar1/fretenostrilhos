<!DOCTYPE html>
<html>
  <head>
    <title>Fretenostrilhos</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notice"><%= notice %></div>
    <% elsif flash[:alert] %>
      <div class="alert"><%= alert %></div>
    <% end %>
    <nav>
      <%= link_to 'Home', root_path %> | <%= link_to 'Transportadoras', carriers_path %>
    </nav>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
