<%= @carrier.brand_name %><br />
<%= @delivery_distance.show_delivery_distance %>
<%= form_with model: [:user, @delivery_time] do |d| %>
  <div>
    <%= d.label :time %>
    <%= d.number_field :time, in: 1..99 %> dias
  </div>

  <%= d.hidden_field :carrier_id, value: @carrier.id %>
  <%= d.hidden_field :delivery_distance_id, value: @delivery_distance.id %>

  <div>
    <%= d.submit 'Salvar' %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to 'Voltar', user_delivery_times_path, class: 'btn btn-primary' %>
</div>